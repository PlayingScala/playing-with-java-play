# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET           /todos                 pl.devthoughts.controllers.TodoController.getAllItems

POST          /todos                 pl.devthoughts.controllers.TodoController.addItem()
GET           /todos/:id             pl.devthoughts.controllers.TodoController.getItem(id: String)
PUT           /todos/:id             pl.devthoughts.controllers.TodoController.updateItem(id: String)
DELETE        /todos/:id             pl.devthoughts.controllers.TodoController.deleteItem(id: String)
POST          /todos/:id/done        pl.devthoughts.controllers.TodoController.done(id: String)
POST          /todos/:id/open        pl.devthoughts.controllers.TodoController.open(id: String)